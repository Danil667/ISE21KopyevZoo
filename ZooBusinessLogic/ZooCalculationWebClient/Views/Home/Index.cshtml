@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Добро пожаловать</h1>
    @if (Program.Client == null && Program.AdminMode == false)
    {
        <div class="card" style="width: 20rem; position: relative; left: 840px; top: 0px;">
            <div class="card-body">
                <h5 class="card-title">Вход и регистрация</h5>
                <p class="card-text">Войдите в существующий аккаунт или создайте новый</p>
                <a class="btn btn-primary" asp-area="" asp-controller="Client" asp-action="Login">Вход</a>
                <a class="btn btn-primary" asp-area="" asp-controller="Client" asp-action="Registration">Регистрация</a>
            </div>
        </div>
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" style="
             position: relative;
             top: 20px;">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="img/tiger.png" class="d-block w-100" alt="тигр">
                </div>
                <div class="carousel-item">
                    <img src="img/жираф.jpg" class="d-block w-100" alt="Жираф">
                </div>
                <div class="carousel-item">
                    <img src="img/зебра.webp" class="d-block w-100" alt="Зебра">
                </div>
            </div>
        </div>
    }
    else
    {
        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="img/tiger.png" class="d-block w-100" alt="тигр">
                </div>
                <div class="carousel-item">
                    <img src="img/жираф.jpg" class="d-block w-100" alt="Жираф">
                </div>
                <div class="carousel-item">
                    <img src="img/зебра.webp" class="d-block w-100" alt="Зебра">
                </div>
            </div>
        </div>
    }

</div>